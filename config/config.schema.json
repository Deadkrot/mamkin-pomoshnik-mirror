  "properties": {
    "app": {
      "type": "object",
      "properties": {
        "tz": {
          "type": "string"
        },
        "default_feeds_per_day": {
          "type": "integer"
        },
        "notify": {
          "type": "object",
          "properties": {
            "ahead_minutes": {
              "type": "integer"
            },
            "at_event": {
              "type": "boolean"
            }
          },
          "required": [
            "ahead_minutes",
            "at_event"
          ]
        }
      },
      "required": [
        "tz",
        "default_feeds_per_day",
        "notify"
      ]
    }
  },
  "required": [
    "app"
  ]
}